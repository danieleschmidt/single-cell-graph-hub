# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{html,css,scss,less}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

[*.{rst,txt}]
max_line_length = 80

[*.{sh,bash,zsh}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{toml,cfg,ini}]
indent_size = 4

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Jupyter notebooks
[*.ipynb]
insert_final_newline = false