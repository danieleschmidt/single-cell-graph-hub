# Single-Cell Graph Hub Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# API Configuration
# =============================================================================

# Single-Cell Graph Hub API
SCGRAPH_HUB_API_URL=https://api.scgraphhub.org/v1
SCGRAPH_HUB_API_TOKEN=your_api_token_here

# =============================================================================
# Data Storage Configuration
# =============================================================================

# Local data directory
SCGRAPH_DATA_DIR=./data

# Cache directory for preprocessed data
SCGRAPH_CACHE_DIR=~/.scgraph_hub/cache

# AWS S3 Configuration (for cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET_NAME=single-cell-graph-hub-data

# Google Cloud Storage (alternative)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCS_BUCKET_NAME=single-cell-graph-hub-data

# =============================================================================
# Model Configuration
# =============================================================================

# Model cache directory
MODEL_CACHE_DIR=~/.scgraph_hub/models

# Hugging Face Hub (for model sharing)
HF_TOKEN=your_huggingface_token
HF_USERNAME=your_huggingface_username

# =============================================================================
# Computing Resources
# =============================================================================

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_HOME=/tmp/torch_cache

# Number of CPU cores for parallel processing
N_JOBS=4

# Memory limits (in GB)
MAX_MEMORY_GB=16

# =============================================================================
# Development Configuration
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Development mode (enables additional debugging)
SCGRAPH_DEV_MODE=false

# Testing configuration
PYTEST_TIMEOUT=300
PYTEST_WORKERS=auto

# =============================================================================
# External Services
# =============================================================================

# Weights & Biases (for experiment tracking)
WANDB_API_KEY=your_wandb_api_key
WANDB_PROJECT=single-cell-graph-hub
WANDB_ENTITY=your_wandb_entity

# MLflow (alternative experiment tracking)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=single-cell-graph-hub

# =============================================================================
# Database Configuration (if using database backend)
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/scgraph_hub

# Redis (for caching and task queues)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security Configuration
# =============================================================================

# Secret key for session management
SECRET_KEY=your_secret_key_here

# JWT token expiration (in hours)  
JWT_EXPIRATION_HOURS=24

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Prometheus metrics endpoint
PROMETHEUS_PORT=9090

# Health check configuration
HEALTH_CHECK_INTERVAL=30

# Error reporting (Sentry)
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# CI/CD Configuration
# =============================================================================

# GitHub Actions
GITHUB_TOKEN=your_github_token

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# =============================================================================
# Research & Academic
# =============================================================================

# ORCID ID (for attribution)
ORCID_ID=0000-0000-0000-0000

# Institution affiliation
INSTITUTION=Your Institution Name

# Grant information (for acknowledgments)
GRANT_NUMBER=your_grant_number

# =============================================================================
# Usage Examples
# =============================================================================

# Basic usage (minimal configuration)
# SCGRAPH_DATA_DIR=./data
# LOG_LEVEL=INFO

# Development setup
# SCGRAPH_DEV_MODE=true
# LOG_LEVEL=DEBUG
# PYTEST_WORKERS=auto

# Production deployment
# SCGRAPH_HUB_API_TOKEN=prod_token
# LOG_LEVEL=WARNING
# SENTRY_DSN=prod_sentry_dsn

# Cloud deployment
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
# S3_BUCKET_NAME=prod-bucket